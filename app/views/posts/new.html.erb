<%= render "navbar/nav"%>

<div class="card" style="width: 28rem; margin:auto;margin-top:2rem">
     <h5 class="card-title" style="margin:auto;margin-top:5px;">Add Post</h5>
  <div class="card-body">
<%= form_with model:@post, url:user_posts_path(session[:user_id]) do |form|%>
    <div class="mb-3">
        <%=form.hidden_field :user_id, value:session[:user_id]%>
    </div>
    <div class="mb-3">
        <%=form.label :title, class:"form-label"%>
        <%=form.text_field :title, class:"form-control"%>
    </div>
    <% @post.errors.full_messages_for(:title).each do |message|%>
        <p><%=message%></p>
    <%end%>
    <div class="mb-3">
        <%=form.label :description, class:"form-label"%>
        <%=form.text_field :description, class:"form-control"%>
    </div>
     <% @post.errors.full_messages_for(:description).each do |message|%>
        <p><%=message%></p>
    <%end%>
   
    <%= form.submit "Add Post", class:"btn btn-primary m-1"%>
<%end%>
</div>
</div>
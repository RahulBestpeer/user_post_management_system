<%= render "navbar/nav"%>

<div class="card" style="width: 28rem; margin:auto;margin-top:2rem">
     <h5 class="card-title" style="margin:auto;margin-top:5px;">Update Profile Form</h5>
  <div class="card-body">
<%= form_with model:@user do |form|%>
    <div class="mb-3">
        <%=form.label :name, class:"form-label"%>
        <%=form.text_field :name, class:"form-control"%>
    </div>
    <% @user.errors.full_messages_for(:name).each do |message|%>
        <p><%=message%></p>
    <%end%>
    <div class="mb-3">
        <%=form.label :email, class:"form-label"%>
        <%=form.email_field :email, class:"form-control"%>
    </div>
     <% @user.errors.full_messages_for(:email).each do |message|%>
        <p><%=message%></p>
    <%end%>
    <div class="mb-3">
        <%=form.label :password, class:"form-label"%>
        <%=form.password_field :password, class:"form-control"%>
    </div>
     <% @user.errors.full_messages_for(:password).each do |message|%>
        <p><%=message%></p>
    <%end%>
    <%= form.submit "Update Profile", class:"btn btn-primary m-1"%>
<%end%>
</div>
</div>